mysql> drop table if exists test.t_target;
mysql> create table test.t_target(target json);
mysql> alter table test.t_target set tiflash replica 1;
mysql> insert into test.t_target values(null), ('[1]'), ('{\"a\":1}'); #NO_UNESCAPE

mysql> drop table if exists test.t_obj;
mysql> create table test.t_obj(obj varchar(100));
mysql> alter table test.t_obj set tiflash replica 1;
mysql> insert into test.t_obj values(null), ('[]'), ('[1]'), ('[0, 1, 2]'), ('{\"a\":1}'), ('[{\"a\":1}]'), ('[1, [1], {\"a\":1}]'); #NO_UNESCAPE

func> wait_table test t_target
func> wait_table test t_obj

mysql> set tidb_allow_mpp=1;set tidb_enforce_mpp=1; set tidb_isolation_read_engines='tiflash'; select target, obj, target member of(obj) from (select * from test.t_target join test.t_obj) t order by target, obj;
+----------+-------------------+-----------------------+
| target   | obj               | target member of(obj) |
+----------+-------------------+-----------------------+
| NULL     | NULL              |                  NULL |
| NULL     | [0, 1, 2]         |                  NULL |
| NULL     | [1, [1], {"a":1}] |                  NULL |
| NULL     | [1]               |                  NULL |
| NULL     | []                |                  NULL |
| NULL     | [{"a":1}]         |                  NULL |
| NULL     | {"a":1}           |                  NULL |
| {"a": 1} | NULL              |                  NULL |
| {"a": 1} | [0, 1, 2]         |                     0 |
| {"a": 1} | [1, [1], {"a":1}] |                     1 |
| {"a": 1} | [1]               |                     0 |
| {"a": 1} | []                |                     0 |
| {"a": 1} | [{"a":1}]         |                     1 |
| {"a": 1} | {"a":1}           |                     1 |
| [1]      | NULL              |                  NULL |
| [1]      | [0, 1, 2]         |                     0 |
| [1]      | [1, [1], {"a":1}] |                     1 |
| [1]      | [1]               |                     0 |
| [1]      | []                |                     0 |
| [1]      | [{"a":1}]         |                     0 |
| [1]      | {"a":1}           |                     0 |
+----------+-------------------+-----------------------+

mysql> set tidb_allow_mpp=1;set tidb_enforce_mpp=1; set tidb_isolation_read_engines='tiflash'; select obj, 1 member of(obj) from test.t_obj order by obj;
+-------------------+------------------+
| obj               | 1 member of(obj) |
+-------------------+------------------+
| NULL              |             NULL |
| [0, 1, 2]         |                1 |
| [1, [1], {"a":1}] |                1 |
| [1]               |                1 |
| []                |                0 |
| [{"a":1}]         |                0 |
| {"a":1}           |                0 |
+-------------------+------------------+

# Clean up.
mysql> drop table if exists test.t_target;
mysql> drop table if exists test.t_obj;
